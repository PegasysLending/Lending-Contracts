{
  "name": "@pegasys/lending-contracts",
  "version": "1.0.1",
  "description": "Pegasys Protocol V2 smart contracts",
  "files": [
    "contracts",
    "artifacts"
  ],
  "scripts": {
    "run-env": "npm i && tail -f /dev/null",
    "hardhat": "hardhat",
    "hardhat:kovan": "hardhat --network kovan",
    "hardhat:tenderly-main": "hardhat --network tenderlyMain",
    "hardhat:rinkeby": "hardhat --network rinkeby",
    "hardhat:ropsten": "hardhat --network ropsten",
    "hardhat:xdai": "hardhat --network xdai",
    "hardhat:main": "hardhat --network main",
    "hardhat:docker": "hardhat --network hardhatevm_docker",
    "compile": "SKIP_LOAD=true hardhat compile",
    "console:fork": "MAINNET_FORK=true hardhat console",
    "test": "TS_NODE_TRANSPILE_ONLY=1 hardhat test test/test-pegasys/*.spec.ts",
    "test-liquidate": "hardhat test test/test-pegasys/__setup.spec.ts test/test-pegasys/liquidation-atoken.spec.ts",
    "test-pegasys-oracle": "hardhat test --network main test/supera-oracle/__setup.spec.ts test/supera-oracle/pegasys-oracle.spec.ts",
    "test-deploy": "hardhat test test/__setup.spec.ts test/test-init.spec.ts",
    "test-pausable": "hardhat test test/test-pegasys/__setup.spec.ts test/test-pegasys/pausable-functions.spec.ts",
    "test-permit": "hardhat test test/__setup.spec.ts test/atoken-permit.spec.ts",
    "test-stable-and-atokens": "hardhat test test/__setup.spec.ts test/atoken-transfer.spec.ts test/stable-token.spec.ts",
    "test-weth": "hardhat test test/__setup.spec.ts test/weth-gateway.spec.ts",
    "dev:coverage": "buidler compile --force && buidler coverage --network coverage",
    "pegasys:evm:dev:migration": "npm run compile && hardhat pegasys:dev",
    "pegasys:docker:full:migration": "npm run compile && npm run hardhat:docker -- pegasys:mainnet",
    "pegasys:kovan:full:migration": "npm run compile && npm run hardhat:kovan -- pegasys:mainnet",
    "pegasys:kovan:full:initialize": "npm run hardhat:kovan -- full:initialize-lending-pool --verify --pool Pegasys",
    "pegasys:rinkeby:deploy-registry": "npm run hardhat:rinkeby -- full:deploy-address-provider-registry",
    "pegasys:rinkeby:full:migration": "npm run hardhat:rinkeby -- pegasys:mainnet",
    "pegasys:rinkeby:full:initialize": "npm run hardhat:rinkeby -- full:initialize-lending-pool --verify --pool Pegasys",
    "pegasys:ropsten:full:migration": "npm run compile && npm run hardhat:ropsten -- pegasys:mainnet --verify",
    "pegasys:ropsten:full:initialize": "npm run hardhat:ropsten -- full:initialize-lending-pool --verify --pool Pegasys",
    "pegasys:xdai:deploy-registry": "npm run hardhat:xdai -- full:deploy-address-provider-registry",
    "pegasys:main:deploy-registry": "npm run hardhat:main -- full:deploy-address-provider-registry",
    "pegasys:xdai:full:migration": "npm run compile && npm run hardhat:xdai -- pegasys:mainnet",
    "pegasys:xdai:full:initialize": "npm run hardhat:xdai -- full:initialize-lending-pool --pool Pegasys",
    "pegasys:fork:main:tenderly": "npm run compile && npm run hardhat:tenderly-main -- pegasys:mainnet",
    "pegasys:fork:main": "npm run compile && MAINNET_FORK=true  hardhat pegasys:mainnet",
    "pegasys:main:full:migration": "npm run compile && npm run hardhat:main -- pegasys:mainnet --verify",
    "pegasys:main:full": "npm run compile && npm run hardhat:main -- pegasys:mainnet",
    "pegasys:main:full:initialize": "npm run compile && MAINNET_FORK=true full:initialize-tokens --pool Pegasys",
    "pegasys:deployUniswapRepayAdapter": "hardhat --network rinkeby deploy-UniswapRepayAdapter --provider 0x7D716cA020b551f17531b1F793Ff58409f13F449 --router 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D --weth 0xDf032Bc4B9dC2782Bb09352007D4C57B75160B15",
    "pegasys:UniswapLiquiditySwapAdapter": "hardhat --network rinkeby deploy-UniswapLiquiditySwapAdapter --provider 0x7D716cA020b551f17531b1F793Ff58409f13F449 --router 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D --weth 0xDf032Bc4B9dC2782Bb09352007D4C57B75160B15",
    "prettier:check": "npx prettier -c 'tasks/**/*.ts' 'contracts/**/*.sol' 'helpers/**/*.ts'  'test/**/*.ts'",
    "prettier:write": "prettier --write 'tasks/**/*.ts' 'contracts/**/*.sol' 'helpers/**/*.ts'  'test/**/*.ts'",
    "ci:test": "npm run compile && npm run test",
    "ci:clean": "rm -rf ./artifacts ./cache ./types",
    "print-contracts:kovan": "npm run hardhat:kovan -- print-contracts",
    "print-contracts:main": "npm run hardhat:main -- print-contracts",
    "print-contracts:ropsten": "npm run hardhat:main -- print-contracts",
    "dev:deployUIProvider": "npm run hardhat:kovan deploy-UiPoolDataProvider",
    "kovan:verify": "npm run hardhat:kovan verify:general -- --all --pool Pegasys",
    "rinkeby:verify": "npm run hardhat:rinkeby verify:general -- --all --pool Pegasys",
    "ropsten:verify": "npm run hardhat:ropsten verify:general -- --all --pool Pegasys",
    "mainnet:verify": "npm run hardhat:main verify:general -- --all --pool Pegasys",
    "kovan:verify:tokens": "npm run hardhat:kovan verify:tokens -- --pool Pegasys",
    "rinkeby:verify:tokens": "npm run hardhat:rinkeby verify:tokens -- --pool Pegasys",
    "ropsten:verify:tokens": "npm run hardhat:ropsten verify:tokens -- --pool Pegasys",
    "mainnet:verify:tokens": "npm run hardhat:main verify:tokens -- --pool Pegasys",
    "print-config:fork:mainnet": "MAINNET_FORK=true hardhat print-config:fork",
    "print-config:rinkeby": "hardhat --network rinkeby print-config --pool Pegasys --data-provider 0xA1901785c29cBd48bfA74e46b67C736b26054fa4",
    "print-config:kovan": "hardhat --network kovan print-config --pool Pegasys --data-provider 0xA1901785c29cBd48bfA74e46b67C736b26054fa4",
    "main:fork:initialize-tokens": "npm run compile && MAINNET_FORK=true hardhat full:initialize-tokens --pool Pegasys",
    "main:initialize-tokens": "npm run compile && hardhat --network main full:initialize-tokens --pool Pegasys --rates-deployer 0x5Dda19AC38b19788A7842819d6673034006090E1 --data-provider 0xb8920436477885AC4463d9aAc9832AFEe81cCc9C",
    "rinkeby:initialize-tokens": "npm run compile && hardhat --network rinkeby full:initialize-tokens --pool Pegasys",
    "kovan:initialize-tokens": "npm run compile && hardhat --network kovan full:initialize-tokens --pool Pegasys",
    "external:deploy-assets-kovan": "npm run compile && hardhat --network kovan external:deploy-new-asset --symbol ${SYMBOL} --verify",
    "external:deploy-assets-main": "hardhat --network main external:deploy-new-asset --symbol WBTC",
    "external:deploy-assets-xdai": "npm run compile && hardhat --network xdai external:deploy-new-asset --symbol ${SYMBOL}",
    "prepublishOnly": "npm run compile"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.7",
    "@nomiclabs/buidler-ethers": "2.0.0",
    "@nomiclabs/buidler-etherscan": "^2.1.0",
    "@nomiclabs/buidler-waffle": "2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "3.1.0",
    "@tenderly/hardhat-tenderly": "^1.1.0-beta.3",
    "@typechain/ethers-v4": "1.0.0",
    "@typechain/ethers-v5": "^2.0.0",
    "@typechain/truffle-v4": "2.0.2",
    "@typechain/truffle-v5": "2.0.2",
    "@typechain/web3-v1": "1.0.0",
    "@types/chai": "4.2.11",
    "@types/lowdb": "1.0.9",
    "@types/mocha": "7.0.2",
    "@types/node": "14.0.5",
    "bignumber.js": "9.0.0",
    "buidler-typechain": "0.1.1",
    "chai": "4.2.0",
    "chai-bignumber": "3.0.0",
    "chai-bn": "^0.2.1",
    "dotenv": "^8.2.0",
    "eth-sig-util": "2.5.3",
    "ethereum-waffle": "3.0.2",
    "ethereumjs-util": "7.0.2",
    "ethers": "^5.0.19",
    "globby": "^11.0.1",
    "hardhat": "^2.0.8",
    "hardhat-gas-reporter": "^1.0.0",
    "hardhat-typechain": "^0.3.3",
    "husky": "^4.2.5",
    "lowdb": "1.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.53",
    "pretty-quick": "^2.0.1",
    "solidity-coverage": "0.7.10",
    "temp-hardhat-etherscan": "^2.0.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typechain": "^4.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'contracts/**/*.sol' --pattern 'helpers/**/*.ts'  --pattern 'test/**/*.ts' --pattern 'tasks/**/*.ts'"
    }
  },
  "author": "Pagesys",
  "license": "AGPLv3",
  "dependencies": {
    "axios": "^1.5.0",
    "bn.js": "^5.2.1",
    "escape-string-regexp": "^4.0.0",
    "tmp-promise": "^3.0.2"
  },
  "keywords": [
    "pegasys",
    "protocol",
    "protocol-v2",
    "ethereum",
    "solidity"
  ]
}
